<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailItem"
    android:background="@color/merahh">

    <TextView
        android:id="@+id/detailText"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Movie"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/detailBackButton"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/detailImgView"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/detailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="36dp"
        android:background="@drawable/outline_white"
        android:scaleType="centerCrop"
        android:clipToOutline="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailImgView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Judul Movie"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_stars_24"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/edt_detail_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.1"
                android:textColor="@color/yellow"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/detailAuthor"
            android:layout_marginHorizontal="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Director: Huda Muh"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailTitle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/detailLabelOne"
                android:layout_marginHorizontal="36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adventure"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="6dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:background="@drawable/filled_black"
                android:textSize="16dp"
                android:textAlignment="textStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailAuthor"/>
            <TextView
                android:id="@+id/detailLabelTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Action"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="6dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:background="@drawable/filled_black"
                android:textSize="16dp"
                android:textAlignment="textStart"
                app:layout_constraintStart_toEndOf="@id/detailLabelOne"
                app:layout_constraintTop_toBottomOf="@id/detailAuthor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailLabelThree"
                android:layout_marginHorizontal="36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sci-fi"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="6dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:background="@drawable/filled_black"
                android:textSize="16dp"
                android:textAlignment="textStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailAuthor"/>
            <TextView
                android:id="@+id/detailLabelFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Survival"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="6dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:background="@drawable/filled_black"
                android:textSize="16dp"
                android:textAlignment="textStart"
                app:layout_constraintStart_toEndOf="@id/detailLabelOne"
                app:layout_constraintTop_toBottomOf="@id/detailAuthor"/>
        </LinearLayout>

        <TextView
            android:id="@+id/detailStoryline"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sinopsis"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailLabelOne"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="130dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:fontFamily="@font/poppins_medium"
                        android:justificationMode="inter_word"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>